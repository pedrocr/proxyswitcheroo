{
  "manifest_version": 2,
  "name": "ProxySwitcheroo",
  "version": "0.1",
  "description": "Simple and Safe Proxy Switching",
  "icons": {
    "256": "icons/globe.png"
  },

  "permissions": [
    "storage",
    "tabs",
    "proxy"
  ],

  "browser_action": {
    "default_icon": "icons/globe-disabled.png",
    "default_title": "No Proxy"
  },

  "options_ui": {
    "page": "options.html"
  },

  "background": {
    "scripts": ["background.js"]
  }
}

