{
  "manifest_version": 2,
  "name": "ProxySwitcheroo",
  "version": "0.2",
  "description": "Simple and Safe Proxy Switching",
  "icons": {
    "256": "icons/globe.png"
  },

  "permissions": [
    "storage",
    "tabs",
    "proxy"
  ],

  "browser_action": {
    "default_icon": "icons/globe-disabled.png",
    "default_title": "No Proxy"
  },

  "options_ui": {
    "page": "options.html"
  },

  "applications": {
    "gecko": {
      "id": "{6787c9e3-c787-4e21-9449-92e301642b34}",
      "strict_min_version": "57.0"
    }
  },

  "background": {
    "scripts": ["background.js"]
  }
}

